<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="@string/pref_price_filter_key"
        android:title="@string/pref_price_filter_title"
        android:summary="%s"
        android:dialogTitle="@string/pref_price_filter_title"
        android:entries="@array/preferred_price_entries"
        android:entryValues="@array/preferred_price_values"
        android:defaultValue="@string/pref_price_default" >
    </ListPreference>

    <CheckBoxPreference
        android:key="@string/pref_open_now_key"
        android:title="@string/pref_open_now_title"
        android:defaultValue="true">
    </CheckBoxPreference>

    <CheckBoxPreference
        android:key="@string/pref_deals_key"
        android:title="@string/pref_deals_title"
        android:defaultValue="false">
    </CheckBoxPreference>
</PreferenceScreen>