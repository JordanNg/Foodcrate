<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CrateActivity"
    tools:showIn="@layout/activity_crate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_image_business"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="18dp"
                android:layout_width="500px"
                android:layout_height="500px" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_crate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="24dp"
                    android:text="Name:" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_crate_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="18dp"
                        android:text="Rating:"
                        android:textSize="18dp" />
                    <LinearLayout
                        android:id="@+id/fl_full_stars"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_crate_rating"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_one_star"
                            android:src="@drawable/ic_star_24dp"
                            android:paddingLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"/>
                        <ImageView
                            android:id="@+id/iv_two_star"
                            android:src="@drawable/ic_star_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"/>
                        <ImageView
                            android:id="@+id/iv_three_star"
                            android:src="@drawable/ic_star_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"/>
                        <ImageView
                            android:id="@+id/iv_four_star"
                            android:src="@drawable/ic_star_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible" />
                        <ImageView
                            android:id="@+id/iv_five_star"
                            android:src="@drawable/ic_star_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fl_half_stars"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_toRightOf="@id/tv_crate_rating">
                        <ImageView
                            android:id="@+id/iv_oneh_star"
                            android:src="@drawable/ic_star_half_24dp"
                            android:paddingLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"/>
                        <ImageView
                            android:id="@+id/iv_twoh_star"
                            android:src="@drawable/ic_star_half_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"/>
                        <ImageView
                            android:id="@+id/iv_threeh_star"
                            android:src="@drawable/ic_star_half_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"/>
                        <ImageView
                            android:id="@+id/iv_fourh_star"
                            android:src="@drawable/ic_star_half_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible" />
                        <ImageView
                            android:id="@+id/iv_fiveh_star"
                            android:src="@drawable/ic_star_half_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"/>
                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:textSize="18dp"
                        android:text="Price:" />
                    <TextView
                        android:id="@+id/tv_crate_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:textSize="20dp"
                        android:text="Price:" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_phone_24dp"/>
            <TextView
                android:id="@+id/tv_crate_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Phone:" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_location_on_24dp"/>
            <TextView
                android:id="@+id/tv_crate_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="location" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_crate_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Transactions: " />
            <TextView
                android:id="@+id/tv_crate_transElements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="2dp"
                android:text="Transactions: " />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/tv_crate_isOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorOpen"
                android:text="Open Now"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/tv_crate_isClosed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorClosed"
                android:text="Closed Now"
                android:visibility="invisible"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>